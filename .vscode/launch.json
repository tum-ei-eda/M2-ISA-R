{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Parse CoreDSL2 (antlr)",
            "type": "python",
            "request": "launch",
            "module": "m2isar.frontends.coredsl2.parser",
            "args": [
                "${input:inputFile}",
                "--log", "debug"
            ],
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Generate ETISS",
            "type": "python",
            "request": "launch",
            "module": "m2isar.backends.etiss.writer",
            "args": [
                //"--separate",
                //"--static-scalars",
                "--log", "info",
                "${input:inputFile}"
            ],
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Model Viewer",
            "type": "python",
            "request": "launch",
            "module": "m2isar.backends.viewer.viewer",
            "args": [
                "${input:inputFile}"
            ],
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Disassembler",
            "type": "python",
            "request": "launch",
            "module": "m2isar.backends.disass.disass",
            "args": [
                "${input:inputFile}",
                "RV32IMACFD",
                "/home/wysiwyng/work/etiss-mine/install/examples/SW/riscv/build/riscv_example_s0.bin"
            ],
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "default": "../coredsl-models/riscv/tum_rv.core_desc",
            "type": "pickString",
            "options": [
                "../coredsl2-models/test/eval.core_desc",
                "../coredsl2-models/test/fn.core_desc",
                "../coredsl2-models/test/inherit.core_desc",
                "../coredsl2-models/test/overlap.core_desc",
                "../coredsl2-models/riscv/top.core_desc",
                "../etiss_arch_riscv/top.core_desc"
            ],
            "description": ""
        }
    ]
}